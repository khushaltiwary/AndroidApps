<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E3B9D6D"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="408dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:id="@+id/tableRowUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:id="@+id/TimertextView"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:background="#DFE00B0B"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Timer"
                android:textColor="#F5F2F2"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/QuestionstextView"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:background="#E3EFD914"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Questions"
                android:textColor="#0B0000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ScoretextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#D12513BF"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="Score"
                android:textColor="#F5F2F2"
                android:textSize="26sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:id="@+id/timeValueTextView"
                android:layout_width="93dp"
                android:layout_height="130dp"
                android:background="#DFE00B0B"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="#F5F2F2"
                android:textSize="55dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionValueTextView"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:background="#E3EFD914"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="#0B0000"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreValueTextView"
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:background="#D12513BF"
                android:gravity="center"
                android:paddingRight="5dp"
                android:textColor="#F5F2F2"
                android:textSize="39sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="408dp"
        android:layout_height="446dp"
        android:layout_marginEnd="1dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771">

        <Button
            android:id="@+id/button1"
            android:layout_width="187dp"
            android:layout_height="213dp"
            android:backgroundTint="#DBCA08EB"
            android:onClick="chooseAns"
            android:padding="10dp"
            android:tag="0"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="208dp"
            android:layout_height="213dp"
            android:backgroundTint="#F2FF5722"
            android:onClick="chooseAns"
            android:padding="10dp"
            android:tag="1"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="187dp"
            android:layout_height="213dp"
            android:backgroundTint="#DC08E010"
            android:onClick="chooseAns"
            android:padding="10dp"
            android:tag="2"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="208dp"
            android:layout_height="210dp"
            android:backgroundTint="#D93F51B5"
            android:onClick="chooseAns"
            android:padding="10dp"
            android:tag="3"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="63dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GridLayout">

        <Button
            android:id="@+id/restartButtonView"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#EB0A3C"
            android:onClick="restart"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Restart"
            android:visibility="invisible" />

        <Button
            android:id="@+id/quitButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#240B6C"
            android:onClick="quit"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Quit"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>